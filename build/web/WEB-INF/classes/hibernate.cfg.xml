<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/loltoxicsdb</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">gg123456</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.current_session_context_class">jta</property>
    <property name="hibernate.query.factory_class">org.hibernate.hql.internal.ast.ASTQueryTranslatorFactory</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping class="com.loltoxics.model.Administrador"/>
    <mapping class="com.loltoxics.model.Usuario"/>
    <mapping class="com.loltoxics.model.Troll"/>
    <mapping class="com.loltoxics.model.Reporte"/>
    <mapping class="com.loltoxics.model.Role"/>
  </session-factory>
</hibernate-configuration>
